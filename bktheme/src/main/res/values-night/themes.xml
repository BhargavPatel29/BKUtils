<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YogiFoods" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appDefault_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent_500</item>
        <item name="colorAccent">@color/colorAccent_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appDefault_2</item>
        <!-- Font Style -->
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/_11sp</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="actionBarSize">@dimen/_40dp</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#33000000</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>
</resources>