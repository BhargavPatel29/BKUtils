        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

