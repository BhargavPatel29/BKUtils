        <item name="android:background">@drawable/bg_button_primary_square</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/_90dp</item>
        <item name="android:paddingLeft">@dimen/_20dp</item>
        <item name="android:paddingRight">@dimen/_20dp</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textFontWeight" tools:targetApi="p">100</item>-->
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:singleLine">true</item>
