    //==============================================================================================

    <style name="BKTheme_TabLayout_filter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_32dp</item>
        <item name="tabIndicator">@drawable/bg_tab_selected</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">@dimen/_32dp</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">@drawable/bg_tab_unselected</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/bg_tab_indicator</item>
        <item name="tabTextAppearance">@style/BKTheme_TabLayout_TextAppearance_filter</item>
        <item name="tabTextColor">@color/text_dark</item>
    </style>

    <style name="BKTheme_TabLayout_TextAppearance_filter">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    //==============================================================================================

    <style name="BKTheme_TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_marginBottom">@dimen/_5dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5dp</item>
    </style>

    <style name="BKTheme_TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:paddingTop">@dimen/_10dp</item>
