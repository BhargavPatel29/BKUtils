        <item name="android:minWidth">@dimen/_80dp</item>
        <item name="android:paddingLeft">@dimen/_5dp</item>
        <item name="android:paddingTop">@dimen/_2dp</item>
        <item name="android:paddingRight">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_darker</item>
        <item name="android:drawablePadding">@dimen/_5dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

